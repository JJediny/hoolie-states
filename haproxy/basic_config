global
    log 127.0.0.1 local0 notice
    maxconn 200
    user haproxy
    group haproxy


defaults
    log      global
    mode     http
    option   httplog
    option   dontlognull
    retries  3
    option   redispatch
    timeout connect   5000
    timeout client    10000
    timeout server    10000

frontend demo-http
    mode http
    stats enable
    stats uri /haproxy?stats
    stats realm Strictly\ Private
    stats auth salt:saltme
    balance roundrobin
    option httpclose
    option forwardfor
    bind *:80
    default_backend demo-servers

backend demo-servers
    server web-server1 10.5.1.126:80 check
    server web-server2 10.5.1.234:80 check
    server ubuntu1 10.5.1.43:80 check
